generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String
  password  String
  name      String   @map("first_name")
  // firstName String   @map("first_name")
  // lastName  String   @map("last_name")
  // aliace    String?
  // phone     String
  // country   String
  // region    String
  // city      String
  // sex       String
  // birthday  DateTime
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  @@map("users")
}

model Artist {
  id           Int       @id @default(autoincrement())
  title        String
  dateStart    Int?      @map("date_start")
  aliace       String?
  type         String?
  genres       String[]
  description  String?
  countries    String[]
  cities       String[]
  imageUrl     String?   @map("image_url")
  albums       Album[]   @relation("artist_albums")
  tracks       Track[]   @relation("artist_tracks")
  featInTracks Track[]   @relation("artist_feat_track")
  concerts     Concert[] @relation("artist_concerts")
  news         News[]    @relation("artist_news")
  awards       Award[]   @relation("artist_awards")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt() @map("updated_at")

  @@map("artists")
}

model Album {
  id          Int      @id @default(autoincrement())
  title       String
  releaseYear Int?     @map("release_year")
  coverUrl    String?  @map("cover_url")
  duration    Int?
  description String?
  artists     Artist[] @relation("artist_albums")
  tracks      Track[]  @relation("album_tracks")
  awards      Award[]  @relation("album_awards")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")

  @@map("albums")
}

model Track {
  id        Int      @id @default(autoincrement())
  position  Int?
  title     String
  duration  String?
  lyrics    String?
  artists   Artist[] @relation("artist_tracks")
  album     Album    @relation("album_tracks", fields: [albumId], references: [id], onDelete: Cascade)
  albumId   Int      @map("album_id")
  feat      Artist[] @relation("artist_feat_track")
  awards    Award[]  @relation("track_awards")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  @@map("tracks")
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  artist      Artist   @relation("artist_news", fields: [artistId], references: [id], onDelete: Cascade)
  artistId    Int      @map("artist_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")

  @@map("news")
}

model Concert {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  country   String
  city      String
  place     String
  link      String
  artists   Artist[] @relation("artist_concerts")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt() @map("updated_at")

  @@map("concerts")
}

// посмотреть как реализовано в афишах
model Place {
  id          Int      @id @default(autoincrement())
  title       String
  country     String
  city        String
  link        String
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")

  @@map("places")
}

model Review {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")

  @@map("reviews")
}

model Genry {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")

  @@map("genries")
}

// награды
model Award {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  artist      Artist?  @relation("artist_awards", fields: [artistId], references: [id], onDelete: Cascade)
  artistId    Int?     @map("artist_id")
  album       Album?   @relation("album_awards", fields: [albumId], references: [id], onDelete: Cascade)
  albumId     Int?     @map("album_id")
  track       Track?   @relation("track_awards", fields: [trackId], references: [id], onDelete: Cascade)
  trackId     Int?     @map("track_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt() @map("updated_at")
}
